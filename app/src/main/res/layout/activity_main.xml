<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:screenOrientation="portrait"
    tools:context=".view.MainActivity">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance Taker"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="40dp"
                />

            <Button
                android:id="@+id/toaddstudent_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="Add Person"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                />

            <Button
                android:id="@+id/tostudentview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toaddstudent_button"
                android:layout_marginTop="0dp"
                android:text="View People"

                android:textAlignment="center" />
            <Button
                android:id="@+id/toattendancehandler_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tostudentview_button"
                android:text="Attendance Log"
                android:textAlignment="center"
                />


        <Button
            android:id="@+id/import_csv_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toattendancehandler_button"
            android:text="Import CSV"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/export_csv_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/import_csv_button"
            android:text="Export CSV"
            android:textAlignment="center"
            />



        </RelativeLayout>


</FrameLayout>