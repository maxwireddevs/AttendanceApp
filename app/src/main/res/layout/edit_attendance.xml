<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Edit Name"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/editattendance_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Enter name here"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set Timestamp"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/editattendance_timestamp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Format: YYYY-MM-DD HH:MM"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set Duration"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/edithours_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

    <SeekBar
        android:id="@+id/editattendance_duration"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:max="8"
        android:layout_marginTop="15dp"
        android:layout_below="@id/hours_show_textview"
        android:progress="4" />

</LinearLayout>